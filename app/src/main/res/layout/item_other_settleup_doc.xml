<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearItem"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <TextView
            android:id="@+id/tvAccountname"
            style="@style/m_order_item"
            android:layout_weight="5.0"
            android:gravity="center|left"
            android:paddingLeft="5.0dip"
            android:textSize="@dimen/list_item_inner_title" />

        <TextView
            android:id="@+id/tvMoney"
            style="@style/m_order_item"
            android:layout_marginRight="8.0dip"
            android:layout_weight="2.0"
            android:gravity="center|right"
            android:textSize="@dimen/list_item_inner_info" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearOperate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_item_button"
        android:gravity="center|right"
        android:minHeight="40.0dip"
        android:visibility="gone">

        <Button
            android:id="@+id/btnModify"
            android:layout_width="50.0dip"
            android:layout_height="30.0dip"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/btn_operation_selector"
            android:text="@string/modify"
            android:textSize="@dimen/list_item_inner_button" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="50.0dip"
            android:layout_height="30.0dip"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/btn_operation_selector"
            android:text="@string/delete"
            android:textSize="@dimen/list_item_inner_button" />
    </LinearLayout>
</LinearLayout>