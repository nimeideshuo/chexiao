<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/order_operation_height" />

    <RelativeLayout
        android:id="@id/buttom"
        style="@style/m_table_buttom"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/buttons"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvYingshou"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:textSize="@dimen/list_edit" />

            <TextView
                android:id="@+id/tvYiShou"
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_weight="1.0"
                android:textSize="@dimen/list_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/btnAccount"
                android:layout_width="60.0dip"
                android:layout_height="40.0dip"
                android:layout_marginRight="2.0dip"
                android:background="@drawable/btn_6_selector"
                android:gravity="center"
                android:onClick="settlepay"
                android:text="项目"
                android:textSize="@dimen/list_button" />

            <Button
                android:id="@+id/btnSettleup"
                android:layout_width="60.0dip"
                android:layout_height="40.0dip"
                android:layout_marginRight="2.0dip"
                android:background="@drawable/btn_6_selector"
                android:gravity="center"
                android:onClick="settlepay"
                android:textSize="@dimen/list_button" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>