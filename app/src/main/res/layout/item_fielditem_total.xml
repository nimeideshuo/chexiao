<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_cccccc"
    android:minHeight="@dimen/order_item_height">

    <TextView
        android:id="@+id/tvSerialid"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_weight="6.0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:textSize="@dimen/list_item_inner_title" />

            <TextView
                android:id="@+id/tvNoUseBatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.0dip"
                android:gravity="center|right"
                android:text="无批次"
                android:textSize="@dimen/list_item_inner_info" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBarcode"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_weight="1.0"
            android:gravity="center|left"
            android:textSize="@dimen/list_item_inner_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOutNum"
                style="@style/m_order_item"
                android:gravity="center|left"
                android:textSize="@dimen/list_item_inner_info" />

            <TextView
                android:id="@+id/tvInNum"
                style="@style/m_order_item"
                android:gravity="center|left"
                android:textSize="@dimen/list_item_inner_info" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>