<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:minHeight="@dimen/dialog_button_height">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOnSale"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/on_sale"
                android:textColor="@color/gray"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/btnOnSaleline"
                android:layout_width="fill_parent"
                android:layout_height="4.0dip"
                android:background="@color/light_gray" />
        </LinearLayout>

        <Button
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/title_divider" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStopSale"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/old_sale"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/btnStopSaleline"
                android:layout_width="fill_parent"
                android:layout_height="4.0dip"
                android:background="@color/trans" />
        </LinearLayout>

        <Button
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/title_divider" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIsPass"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/is_pass"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/btnIsPassline"
                android:layout_width="fill_parent"
                android:layout_height="4.0dip"
                android:background="@color/trans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dish_line"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:layout_below="@id/tab"
        android:background="@drawable/btn_dialog_nor" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@drawable/divider_1" />
</LinearLayout>