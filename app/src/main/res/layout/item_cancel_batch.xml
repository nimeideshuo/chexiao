<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2.0dip"
    android:layout_marginTop="2.0dip"
    android:background="@drawable/item_visit_selector"
    android:minHeight="60.0dip"
    android:orientation="vertical"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip">

    <LinearLayout
        android:id="@+id/llDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="@dimen/list_item_inner_info" />

        <Button
            android:id="@+id/btnDate"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/btn_7_selector"
            android:focusable="false"
            android:gravity="center|left"
            android:paddingLeft="10.0dip"
            android:textSize="@dimen/list_item_inner_info" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBatch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批次"
            android:textSize="@dimen/list_item_inner_info" />

        <EditText
            android:id="@+id/etBatch"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/login_panel_edit_bg"
            android:gravity="center|left"
            android:paddingLeft="10.0dip"
            android:textSize="@dimen/list_item_inner_info" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="@dimen/list_item_inner_info" />

        <EditText
            android:id="@+id/etNum"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/login_panel_edit_bg"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:tag="@integer/number_negative"
            android:textSize="@dimen/list_item_inner_info" />

        <Button
            android:id="@+id/btnUnit"
            android:layout_width="80.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/btn_7_selector"
            android:focusable="false"
            android:textSize="@dimen/list_item_inner_info" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textSize="@dimen/list_item_inner_info" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/login_panel_edit_bg"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:tag="@integer/number_negative"
            android:textSize="@dimen/list_item_inner_info" />
    </LinearLayout>
</LinearLayout>