<?xml version="1.0" encoding="utf-8"?>
<!--自定义一个带底部下划线的背景框-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/color_cccccc" />
        </shape>
    </item>
    <item android:bottom="0.5dp"
          android:top="0.5dp"
          android:left="0.5dp"
          android:right="0.5dp">
        <shape>
            <solid android:color="@color/colorWhite" />
        </shape>
    </item>
</layer-list>